function [output3] = indextobin(input)
 %[7,4,3,1]
 index_second_matrix = 1;
 tempmatrix3 = zeros(1,input(1)+1);
 for index_second_matrix = index_second_matrix:input(1)
     for i = 1:length(input) %checks every value for index if true then replace 0 by 1
         if index_second_matrix == input(i)
             tempmatrix3(index_second_matrix) = 1;
         end
     end
 end
 output3 = tempmatrix3;
 
end
 